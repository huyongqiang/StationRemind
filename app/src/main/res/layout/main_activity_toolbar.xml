<?xml version="1.0" encoding="utf-8"?>


<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
>

    <com.traffic.locationremind.baidu.location.view.SearchEditView
            android:id="@+id/edit_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/search_height_btn"
            android:layout_gravity="center_vertical"
            android:background="@drawable/search_edittext_shape"
            android:drawableLeft="@drawable/ic_search_grey"
            android:layout_centerVertical="true"
            android:drawablePadding="5dp"
            android:paddingLeft="5dp"
            android:hint="@string/search_hint"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:textColorHint="#6A5ACD"
            android:textColor="@color/edit_window"
            android:textSize="12dp"/>
    <TextView
            android:id="@+id/city_select"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="16dp"
            android:layout_marginRight="15dp"
            android:textColor="#6A5ACD"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:text="深圳"
            android:gravity="center"
            android:drawableRight="@drawable/city_select"
            android:textStyle="bold"/>
</FrameLayout>

