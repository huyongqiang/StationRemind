<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/linelayout"
                android:layout_width="match_parent"
                android:background="#F7F7F7"
                android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/close"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:layout_alignParentTop="true"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/tc_notification_failed"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/close"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="80dp"
            android:background="@drawable/cm_mainmap_notice_green"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/notif_text_pad"
                    android:textColor="@color/notif_text_color"
                    android:text="深圳1号地铁"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="@dimen/notif_size"/>

                <TextView
                    android:id="@+id/start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/notif_text_color"
                    android:padding="@dimen/notif_text_pad"
                    android:text="起点:老街"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="@dimen/notif_size"/>

                <TextView
                    android:id="@+id/end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/notif_text_color"
                    android:padding="@dimen/notif_text_pad"
                    android:text="终点:西丽"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="@dimen/notif_size"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/next"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/notif_text_color"
                    android:padding="@dimen/notif_text_pad"
                    android:text="下一站:华侨东"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="@dimen/notif_size"/>

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/notif_text_color"
                    android:padding="@dimen/notif_text_pad"
                    android:text="时间:2分钟"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="@dimen/notif_size"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>




</RelativeLayout>
