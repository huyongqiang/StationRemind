<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">
    <TextView
            android:layout_alignParentTop="true"
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/radius_btn"
            android:textColor="@color/white"
            android:textSize="16dp"/>
    <android.support.v7.widget.CardView
            android:layout_below="@id/text"
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            app:cardUseCompatPadding="false"
            app:cardPreventCornerOverlap="false">

        <ScrollView
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/color_line_margin_bottom"
                android:scrollbars="none"
                android:layout_height="match_parent">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"
                    android:orientation="vertical">

                <GridView
                        android:id="@+id/scene_map"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:numColumns="5"
                        android:gravity="center_horizontal">
                </GridView>
            </LinearLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="2dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="false">
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EDEDED"
        />
        <GridView
                android:id="@+id/lineMap"
                android:layout_width="match_parent"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginBottom="@dimen/bottom_line_more_height"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:horizontalSpacing="5dp"
                android:verticalSpacing="2dp"
                android:numColumns="5"
                android:layout_gravity="top"
                android:gravity="center_horizontal">
        </GridView>
        <LinearLayout
                android:id="@+id/more_line_view"
                android:layout_height="wrap_content"
                android:background="@color/status_color"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="bottom">
            <View
                    android:id="@+id/loadMore"
                    android:layout_width="@dimen/bottom_line_more_height"
                    android:layout_height="@dimen/bottom_line_more_height"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/wallet_personal_trans_refund_up_arrow"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>
